<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ClientLobbyFragment"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <Spinner
                android:id="@+id/gamePieceSpinnerClient"
                android:layout_height="wrap_content"
                android:layout_marginBottom="78dp"
                android:layout_width="200dp"
                app:layout_constraintBottom_toTopOf="@+id/clientPartnersTxt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <Button
                android:id="@+id/readyBtn"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="47dp"
                android:layout_width="wrap_content"
                android:text="Bereit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/clientPartnersTxt"
                app:layout_constraintTop_toBottomOf="@+id/clientPartnersTxt" />

        <ImageButton
                android:id="@+id/backBtn"
                android:layout_height="40dp"
                android:layout_marginEnd="229dp"
                android:layout_marginTop="24dp"
                android:layout_width="0dp"
                android:src="@drawable/abc_vector_test"
                app:layout_constraintEnd_toStartOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/textView6"
                android:layout_height="0dp"
                android:layout_marginBottom="28dp"
                android:layout_marginEnd="295dp"
                android:layout_marginTop="7dp"
                android:layout_width="0dp"
                android:text="@string/LobbyScreen"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/gamePieceSpinnerClient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/backBtn"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/clientPartnersTxt"
                android:layout_height="0dp"
                android:layout_marginBottom="80dp"
                android:layout_width="188dp"
                android:text="Partners"
                app:layout_constraintBottom_toTopOf="@+id/readyBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gamePieceSpinnerClient" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>